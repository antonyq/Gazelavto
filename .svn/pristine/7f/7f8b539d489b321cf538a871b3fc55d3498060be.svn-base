.map-image {
    height: 450px;
    width: 690px;
}

@media (min-width: 900px){
    .contacts-wrapper{
        padding-top: 15px;
        padding-left: 100px;
        padding-right: 100px;
        padding-bottom: 20px;
    }

    .texts{
        padding-left: 130px;
        font-size: var(--font-size-text);
    }

    .submit{
        position: relative;
        top: -40px;
    }
}

@media (max-width: 700px) {
    .map-image {
        margin-top: 10px;
        margin-left: 10px;
        height: 270px;
        width: 360px;
    }

    .submit{
        position: relative;
        top: 10px;
    }
}

.timetable{
    padding-top: 10px;
    padding-bottom: 10px;
    border-radius: 10px;
    background: var(--color-white);
}

.timetable-time{
    text-align: center;
}

.timetable-title{
    text-align: center;
    font-weight: bold;
}

.timetable-additional{
    margin-top: 10px;
    text-align: center;
    font-style: italic;
    color: black;
}

.contact-form{
    padding: 20px;
    border: 2px solid var(--color-gray);
}

.contact-form > .row{  margin-top: 10px;  }

.row > .description > span{
    text-transform: uppercase;
    font-weight: bold;
}

.img-wrapper > a{
    text-transform: uppercase;
    font-size: 20px;
    color: orange;
}

@media (min-width: 700px) and (max-width: 1400px){
    .map-image{
        margin-top: 30px;
        margin-left: 0;
    }
    .row > input,
    .row > textarea{  margin-top: 5px;  }
    .row > textarea{
        font-size: var(--font-size-text);
        height: 100px;
    }
}

@media (min-width: 1400px){
    .map-image{
        margin-top: 80px;
        border-radius: 10px;
        border: 2px solid gray;
    }
    .img-wrapper > a{
        position: relative;
        top: 5px;
    }
    .row > input,
    .row > textarea{  margin-top: 5px;  }
    .row > textarea{
        font-size: var(--font-size-text);
        height: 100px;
    }
}


.submit {
    height: 40px;
    width: 150px;
    cursor: pointer;
    color: var(--color-black);
    background: var(--color-orange);
    display: table;
}

.submit:hover{
    color: var(--color-orange);
    background: none;
}

.submit > span {
    text-align: center;
    text-transform: uppercase;
    vertical-align: middle;
    display: table-cell;
}

